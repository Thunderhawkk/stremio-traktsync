# Production Environment Configuration Template
# Copy this file to .env.production and fill in your production values

# Server Configuration
PORT=8080
NODE_ENV=production
BASE_URL=https://your-domain.com

# Security Configuration (REQUIRED - Generate strong secrets!)
JWT_SECRET=your-super-secure-jwt-secret-here-min-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-here-min-32-chars
SESSION_SECRET=your-super-secure-session-secret-here-min-32-chars
ADDON_SIGNING_SECRET=your-super-secure-addon-secret-here-min-32-chars

# JWT Configuration
JWT_ACCESS_TTL=30m
JWT_REFRESH_TTL=14d
JWT_ISSUER=stremio-trakt-app
JWT_AUDIENCE=stremio-trakt-users

# Security Settings
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://your-domain.com
COOKIE_SECURE=true
COOKIE_SAMESITE=strict

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@localhost:5432/stremio_trakt

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000
DB_MAX_USES=7500
USE_DB_POOL=true

# Trakt.tv API Configuration (REQUIRED)
TRAKT_CLIENT_ID=your-trakt-client-id
TRAKT_CLIENT_SECRET=your-trakt-client-secret
TRAKT_REDIRECT_URI=urn:ietf:wg:oauth:2.0:oob

# OAuth2 Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-domain.com/auth/google/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=https://your-domain.com/auth/github/callback

# External APIs (Optional)
FANARTTV_API_KEY=your-fanart-tv-api-key
OMDB_API_KEY=your-omdb-api-key

# Rate Limiting
RL_APP_MAX=600
RL_AUTH_MAX=20
RL_TRAKT_DEVICE_MAX=60
RL_STATUS_MAX=240

# Session Configuration
SESSION_IDLE_MINUTES=30
SESSION_ABSOLUTE_MINUTES=720
SESSION_NAME=sid

# Database Monitoring
DB_MONITORING_ENABLED=true
DB_CLEANUP_ENABLED=true
DB_METRICS_INTERVAL=300000
DB_CLEANUP_CRON=0 2 * * *

# Logging
LOG_LEVEL=info

# Addon Configuration
ADDON_LINK_TTL_SECONDS=604800

# Optional: Filesystem fallback
DATA_DIR=.data